<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YourTimer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/layout_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/layout_background</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="attrNumberPicker">@style/NumberPickerStyle</item>
        <item name="attrPrimaryButton">@style/PrimaryButtonStyle</item>
        <item name="attrSecondaryButton">@style/SecondaryButtonStyle</item>
        <item name="attrPrimaryTextView">@style/PrimaryTextViewStyle</item>
        <item name="attrSecondaryTextView">@style/SecondaryTextViewStyle</item>
        <item name="attrProgressBar">@style/ProgressBarStyle</item>
        <item name="attrPrimaryCarView">@style/PrimaryCardViewStyle</item>
    </style>

    <style name="NumberPickerStyle" parent="Theme.YourTimer">
        <item name="colorControlNormal">#00000000</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_36_sp</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:backgroundTint">@color/primary_button_color</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="elevation">@dimen/_8dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:backgroundTint">@color/secondary_button_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="PrimaryTextViewStyle">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_20_sp</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="PrimaryTextViewStyle">
        <item name="android:textSize">@dimen/text_16_sp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="indicatorColor">@color/progress_bar_indicator_color</item>
        <item name="indicatorDirectionCircular">counterclockwise</item>
        <item name="indicatorSize">@dimen/_350dp</item>
        <item name="trackColor">@color/progress_bar_track_color</item>
        <item name="trackCornerRadius">@dimen/_16dp</item>
        <item name="trackThickness">@dimen/_4dp</item>
    </style>

    <style name="PrimaryCardViewStyle" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="android:layout_margin">@dimen/_4dp</item>
        <item name="android:backgroundTint">@color/layout_background</item>
        <item name="cardCornerRadius">@dimen/_8dp</item>
        <item name="strokeColor">@color/primary_text_color</item>
    </style>
</resources>