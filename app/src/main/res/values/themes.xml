<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YourTimer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_layout_background
        </item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/primary_layout_background</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>

        <item name="attrNumberPicker">@style/NumberPickerStyle</item>

        <item name="attrPrimaryButton">@style/PrimaryButtonStyle</item>
        <item name="attrSecondaryButton">@style/SecondaryButtonStyle</item>
        <item name="attrThirdButton">@style/ThirdButtonStyle</item>
        <item name="attrPrimaryImageButton">@style/PrimaryImageButtonStyle</item>

        <item name="attrPrimaryTextView">@style/PrimaryTextViewStyle</item>
        <item name="attrSecondaryTextView">@style/SecondaryTextViewStyle</item>
        <item name="attrThirdTextView">@style/ThirdTextViewStyle</item>

        <item name="attrPrimaryTextInputLayout">@style/PrimaryTextInputLayoutStyle</item>

        <item name="attrPrimaryCarView">@style/PrimaryCardViewStyle</item>
        <item name="attrSecondaryCarView">@style/SecondaryCardViewStyle</item>
    </style>

    <style name="NumberPickerStyle" parent="Theme.YourTimer">
        <item name="colorControlNormal">#00000000</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_36_sp</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:breakStrategy">balanced</item>
        <item name="android:backgroundTint">@color/primary_button_color</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="iconTint">@color/secondary_text_color</item>
        <item name="elevation">@dimen/_8dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:backgroundTint">@color/secondary_button_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="iconTint">@color/primary_text_color</item>
    </style>

    <style name="ThirdButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:breakStrategy">balanced</item>
        <item name="android:textColor">@color/four_text_color</item>
        <item name="iconTint">@color/four_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PrimaryImageButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/_4dp</item>
    </style>

    <style name="PrimaryTextViewStyle">
        <item name="android:breakStrategy">balanced</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/text_20_sp</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="PrimaryTextViewStyle">
        <item name="android:textSize">@dimen/text_16_sp</item>
    </style>

    <style name="ThirdTextViewStyle">
        <item name="android:breakStrategy">balanced</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:textSize">@dimen/text_14_sp</item>
        <item name="android:textColor">@color/third_text_color</item>
    </style>

    <style name="PrimaryCardViewStyle" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="android:backgroundTint">@color/primary_layout_background</item>
        <item name="cardCornerRadius">@dimen/_4dp</item>
        <item name="strokeColor">@color/primary_text_color</item>
    </style>

    <style name="SecondaryCardViewStyle" parent="PrimaryCardViewStyle">
        <item name="android:backgroundTint">@color/third_layout_background</item>
    </style>

    <style name="PrimaryTextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/third_text_color</item>
        <item name="boxStrokeColor">@color/color_text_input_layout_stroke_color</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/third_text_color</item>
        <item name="placeholderTextColor">@color/third_text_color</item>
    </style>

</resources>