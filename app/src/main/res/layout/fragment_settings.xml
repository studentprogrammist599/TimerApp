<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setting_fragment_top_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/_4dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setting_fragment_start_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setting_fragment_end_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/setting_fragment_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="New preset"
        app:endIconMode="clear_text"
        android:textColorHint="@color/third_text_color"
        app:hintTextColor="@color/third_text_color"
        app:boxStrokeColor="@color/third_text_color"
        app:placeholderTextColor="@color/third_text_color"
        app:layout_constraintEnd_toEndOf="@id/setting_fragment_end_guideline"
        app:layout_constraintStart_toStartOf="@id/setting_fragment_start_guideline"
        app:layout_constraintTop_toTopOf="@id/setting_fragment_top_guideline"
        app:placeholderText="Enter the name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_20_sp"
            android:inputType="textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>