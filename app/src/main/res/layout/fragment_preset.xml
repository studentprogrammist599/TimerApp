<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.preset.PresetFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/preset_fragment_top_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/_4dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/preset_fragment_start_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/preset_fragment_end_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/preset_fragment_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="New preset"
        android:textColorHint="@color/third_text_color"
        app:boxStrokeColor="@color/third_text_color"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/third_text_color"
        app:layout_constraintEnd_toEndOf="@id/preset_fragment_end_guideline"
        app:layout_constraintStart_toStartOf="@id/preset_fragment_start_guideline"
        app:layout_constraintTop_toTopOf="@id/preset_fragment_top_guideline"
        app:placeholderText="Enter the name"
        app:placeholderTextColor="@color/third_text_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/preset_fragment_preset_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_20_sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/preset_fragment_add_card_button"
        style="?attrPrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:text="Add card"
        app:icon="@drawable/ic_baseline_add_24"
        app:iconTint="@color/secondary_text_color"
        app:layout_constraintStart_toStartOf="@id/preset_fragment_start_guideline"
        app:layout_constraintTop_toBottomOf="@id/preset_fragment_text_input_layout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/preset_fragment_save_button"
        style="?attrPrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:text="save"
        app:icon="@drawable/ic_baseline_save_24"
        app:iconTint="@color/secondary_text_color"
        app:layout_constraintEnd_toEndOf="@id/preset_fragment_end_guideline"
        app:layout_constraintTop_toBottomOf="@id/preset_fragment_text_input_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/preset_fragment_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/preset_fragment_end_guideline"
        app:layout_constraintStart_toStartOf="@id/preset_fragment_start_guideline"
        app:layout_constraintTop_toBottomOf="@id/preset_fragment_add_card_button"
        tools:listitem="@layout/item_time_card_with_buttons" />

</androidx.constraintlayout.widget.ConstraintLayout>